<% content_for :head do %>
  <title>Admin: New Member | JippyBook</title>
<% end %>

<% content_for :body do %>
<section>
	<div class='page-container'>
		<div class="row">
			<div class="col m9 offset-m3">
				<h4>Add New Member</h4>
			</div>
		</div>
		<div class="row">
			<div class="col m2">
				<%= render template: '/admin/nav' %>
			</div>
			<div class="col m7 offset-m1">
				<form action='#' class="col m12">

					<div class="row">
		               <div class="input-field col m12">
					    <select>
					      <option value="" disabled selected>Choose User Type</option>
					      <option value="1">Admin</option>
					      <option value="2">User</option>
					    </select>
					    <label>User Type</label>
					  </div>
		            </div>

					<div class="row">
				        <div class="input-field col m12">
				          <input placeholder="" id="username" type="text" class="validate">
				          <label for="username">Username</label>
				        </div>
				    </div>

				    <div class="row">
				        <div class="input-field col m12">
				          <input placeholder="" id="password" type="password" class="validate">
				          <label for="password">Password</label>
				        </div>
				    </div>

				    <div class="row">
				        <div class="input-field col m12">
				          <input placeholder="" id="email" type="text" class="validate">
				          <label for="email">Email</label>
				        </div>
				    </div>

				    <button class="btn" name="">Create</button>        
				</form>
			</div>
		</div>
	</div>
</section>


<script type="text/javascript">
	$(document).ready(function() {
	    $('select').material_select();
	 });
</script>
<% end %>