<% content_for :head do %>
  <title>Registration | JippyBook</title>
<% end %>

<% content_for :body do %>
  <section>
    <div class='parallax-container'>
      <div class='parallax'>
        <img src='https://d13yacurqjgara.cloudfront.net/users/501233/screenshots/1833854/attachments/305595/bookstore2.jpg'>
      </div>
    </div>
    <div class='page-container'>
      <div class='card-section white'>
        <h4>Registration</h4>
        <% if @user.errors.any? %>
            <h1> Error </h1>
            <% @user.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
        <% end %>
        <form action='/registration' method="post">
          <%= csrf_meta_tags %>
          <div class='row'>
            <div class='col m12 input-field'>
              <input id='username' type='text' class='validate' name='user[username]'>
              <label for='username'>Username</label>
            </div>
          </div>
          <div class='row'>
            <div class='col m12 input-field'>
              <input id='email' type='text' class='validate' name='user[email]'>
              <label for='email'>Email</label>
            </div>
          </div>
          <div class='row'>
            <div class='col m12 input-field'>
              <input id='password' type='password' class='validate' name='user[password]'>
              <label for='password'>Password</label>
            </div>
          </div>
          <div class='row'>
            <div class='col m12 input-field'>
              <input id='cpassword' type='password' class='validate' name='user[password_confirmation]'>
              <label for='cpassword'>Confirm Password</label>
            </div>
          </div>
          <div class='row'>
            <div class='col m12 input-field'>
              <input class="right waves-effect waves-light btn" type="submit" value="Submit"/>
              <a class='right waves-effect waves-light btn'>Submit</a>
            </div>
          </div>
        </form>
      </div>
    </div>
  </section>

  <script>
    $(function () {
      $('.parallax').parallax();
    });
  </script>
<% end %>
